<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <!-- scope="singleton" written is optional it is not mandatory but by default is singleton scope 
    It is use to provide same object reference-->
	<bean id="stdObj" class="in.sp.beans.Student" scope="singleton">
		<property name="name" value="aryan"/>
		<property name="rollno" value="1111"/>
	</bean>
</beans>